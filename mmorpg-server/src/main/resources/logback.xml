<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>gameServer</contextName>

    <!-- 定义日志文件-->
    <property name="log_dir" value="./logs/server" />
    <!-- 最大日志数量 -->
    <property name="maxHistory" value="30" />

    <!--输出到控制台-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cn %d{hh:MM:ss} [%thread] %-5level [%20logger{0}] - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="logbackTest.LogbackDemo" level="debug"  additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>